{
  "compilerOptions": {
    "outDir": "dist", // Output directory for compiled files
    "declaration": true, // Generate .d.ts files
    "declarationDir": "dist/types", // Output directory for .d.ts files
    "rootDir": "src", // Root directory of your source files
    "module": "ESNext", // Module system
    "target": "ESNext", // Target JavaScript version
    "moduleResolution": "node", // Module resolution strategy
    "esModuleInterop": true, // Enable ES module interop
    "skipLibCheck": true, // Skip library checks
    "strict": true // Enable strict type-checking
  },
  "include": ["src/**/*","src/components/*"], // Include all files in src
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist
}